<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.projectdetail.ProjectDetailsFragment">
    
    <TextView
        android:id="@+id/project_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/project_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/project_details_title"/>

    <LinearLayout
        android:id="@+id/linear_layout_front_end_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/project_details_description"
        app:layout_constraintStart_toStartOf="parent">
    
        <TextView
            android:id="@+id/text_view_front_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/front_end_spots"/>

        <TextView
            android:id="@+id/text_view_front_end_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_back_end_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_front_end_spots"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_back_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_end_spots"/>

        <TextView
            android:id="@+id/text_view_back_end_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_ios_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_back_end_spots"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_ios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ios_spots"/>

        <TextView
            android:id="@+id/text_view_ios_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_android_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_ios_spots"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/android_spots"/>

        <TextView
            android:id="@+id/text_view_android_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_data_science_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_android_spots"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_data_science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_science_spots"/>

        <TextView
            android:id="@+id/text_view_data_science_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_ux_designer_spots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_data_science_spots"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_view_ux_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ux_designer_spots"/>

        <TextView
            android:id="@+id/text_view_ux_designer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_participants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_ux_designer_spots"/>

</androidx.constraintlayout.widget.ConstraintLayout>