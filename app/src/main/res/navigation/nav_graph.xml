<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.account.AccountFragment"
        android:label="Manage Account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/addHackathonFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.create.CreateHackathonFragment"
        android:label="Create Hackathon"
        tools:layout="@layout/fragment_create_hackathon" />
    <fragment
        android:id="@+id/editHackathonFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.edit.EditHackathonFragment"
        android:label="Edit Hackathon"
        tools:layout="@layout/fragment_edit_hackathon" />
    <fragment
        android:id="@+id/userHackathonsFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.userhackathons.UserHackathonsFragment"
        android:label="My Hackathons"
        tools:layout="@layout/fragment_user_hackathons" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/logoutFragment"
        android:name="com.lambdaschool.hackathon_portal.ui.fragments.logout.LogoutFragment"
        android:label="fragment_logout"
        tools:layout="@layout/fragment_logout" />
</navigation>